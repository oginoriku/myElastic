<p id="notice"><%= notice %></p>

<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        漫画検索
      </h1>
    </div>
  </div>
</section>

<div class="container" style="margin-top: 30px">
  <div class="field has-addons has-addons-centered">
    <div class="control">
      <input class="input" type="text" placeholder="漫画を検索する">
    </div>
    <div class="control">
      <a class="button is-info">
        検索
      </a>
    </div>
  </div>
</div>

<div class="container" style="margin-top: 50px">
  <table class="table is-striped is-hoverable">
    <thead class="has-background-info">
      <tr>
        <th class="has-text-white-bis">Create authors</th>
        <th class="has-text-white-bis">Publisher</th>
        <th class="has-text-white-bis">Category</th>
        <th class="has-text-white-bis">Author</th>
        <th class="has-text-white-bis">Title</th>
        <th class="has-text-white-bis">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mangas.each do |manga| %>
        <tr>
          <td><%= manga.publisher.name %></td>
          <td><%= manga.category.name %></td>
          <td><%= manga.author.name %></td>
          <td><%= manga.title %></td>
          <td><%= manga.description %></td>
          <td><%= link_to 'Show', manga %></td>
          <td><%= link_to 'Edit', edit_manga_path(manga) %></td>
          <td><%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Manga', new_manga_path %>
</div>


